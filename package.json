{
  "name": "gastrofreak",
  "version": "1.0.0",
  "description": "Application aims to help track of nutrition values of favourite recipes\"",
  "main": "server.js",
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "scripts": {
    "test": "jest --runInBand  --watch  --detectOpenHandles",
    "start": "node server.js",
    "server": "nodemon server.js --ignore './client/'",
    "client": "npm run start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false  npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BenedyktT/gastrofreak.git"
  },
  "keywords": [
    "gastronomy",
    "dietetary",
    "sample",
    "project"
  ],
  "author": "Benedykt Tyminski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BenedyktT/gastrofreak/issues"
  },
  "homepage": "https://github.com/BenedyktT/gastrofreak#readme",
  "devDependencies": {
    "@babel/node": "^7.8.7",
    "@shelf/jest-mongodb": "^1.1.5",
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^5.1.0",
    "esm": "^3.2.25",
    "jest": "^24.9.0",
    "mongodb-memory-server": "^6.5.0",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "babel-jest": "^24.9.0",
    "jest-environment-jsdom-fourteen": "1.0.1",
    "jest-resolve": "24.9.0",
    "jest-watch-typeahead": "0.4.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-validator": "^6.4.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.9.3"
  }
}
